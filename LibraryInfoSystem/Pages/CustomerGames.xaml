<Page x:Class="LibraryInfoSystem.Pages.CustomerGames"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryInfoSystem.Pages"
      xmlns:n="clr-namespace:LibraryInfoSystem.Components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomerGames">

    <Page.Resources>
        <Style TargetType="n:GameComponent">
            <Setter Property="Margin" Value="20"/>
        </Style>
    </Page.Resources>

    <ScrollViewer>
        <Grid Background="AliceBlue">
            <Button Content="Back" VerticalAlignment="Top" HorizontalAlignment="Left" Click="Button_Click"/>
            <WrapPanel x:Name="GamesWrap" Width="500">

            </WrapPanel>

        </Grid>
    </ScrollViewer>
</Page>
