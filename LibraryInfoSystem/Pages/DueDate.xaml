<Page x:Class="LibraryInfoSystem.Pages.DueDate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryInfoSystem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DueDate">

    <Grid>
        <ListView ItemsSource="{Binding DueDates}">
            <ListView.View>
                <GridView>
                    <!-- Bindings to display the properties -->
                    <GridViewColumn Header="Title" DisplayMemberBinding="{Binding _title}"/>
                    <GridViewColumn Header="Price" DisplayMemberBinding="{Binding _price}"/>
                    <GridViewColumn Header="User ID" DisplayMemberBinding="{Binding _userId}"/>
                    <GridViewColumn Header="Booked Date" DisplayMemberBinding="{Binding _bookedDate}"/>
                    <GridViewColumn Header="Deadline Date" DisplayMemberBinding="{Binding _deadlineDate}"/>
                    <GridViewColumn Header="Payment Method" DisplayMemberBinding="{Binding _paymentMethod}"/>
                    <GridViewColumn Header="Admin" DisplayMemberBinding="{Binding _isAdmin}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
