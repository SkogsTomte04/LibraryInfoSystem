<Page x:Class="LibraryInfoSystem.Pages.DueDate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryInfoSystem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DueDate">

    <Grid>
        <ListView ItemsSource="{Binding DuedateGames}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Title" DisplayMemberBinding="{Binding title}" Width="150"/>
                    <GridViewColumn Header="Price" DisplayMemberBinding="{Binding price}" Width="50"/>
                    <GridViewColumn Header="User ID" DisplayMemberBinding="{Binding userId}" Width="100"/>
                    <GridViewColumn Header="Booked Date" DisplayMemberBinding="{Binding bookedDate}" Width="100"/>
                    <GridViewColumn Header="Deadline Date" DisplayMemberBinding="{Binding deadlineDate}" Width="100"/>
                    <GridViewColumn Header="Payment Method" DisplayMemberBinding="{Binding paymentMethod}" Width="100"/>
                    <GridViewColumn Header="Admin" DisplayMemberBinding="{Binding isAdmin}" Width="50"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
