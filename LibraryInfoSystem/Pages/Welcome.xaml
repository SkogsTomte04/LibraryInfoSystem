      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryInfoSystem.Pages"
      xmlns:n="clr-namespace:LibraryInfoSystem"
      
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Welcome">

    <Grid Background="#FF212529">
        <StackPanel ButtonBase.Click="NavButton_Click" Orientation="Horizontal" HorizontalAlignment="Center">
            <n:NavButton Text="DataBase" NavUri="/Pages/DataPage.xaml" Background="#FF6C757D" Foreground="#FFDEE2E6" Height="50"/>
            <n:NavButton Text="Log In" NavUri="/Pages/LogIn.xaml" Background="#FF6C757D" Foreground="#FFDEE2E6" Height="50"/>
            <n:NavButton Text="Games" NavUri="/Pages/Games.xaml" Background="#FF6C757D" Foreground="#FFDEE2E6" Height="50"/>
        </StackPanel>

        

        
    </Grid>
</Page>
