<Page x:Class="LibraryInfoSystem.Pages.DataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryInfoSystem.Pages"
      xmlns:n="clr-namespace:LibraryInfoSystem"
      
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DataPage">

    <Grid Background="AliceBlue">
        <Button Content="Back" Command="NavigationCommands.BrowseBack" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <StackPanel>
            <DataGrid x:Name="GamesDataGrid" Height= "200" Width="400"/>
            <Button Height="30" Width="50" Content="button" Name="UpdateDataGrid" Click="UpdateDataGrid_Click" VerticalAlignment="Bottom"/>
        </StackPanel>
        
    </Grid>
</Page>
