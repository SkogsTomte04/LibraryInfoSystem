<Page x:Class="LibraryInfoSystem.Pages.LogIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryInfoSystem.Pages" xmlns:UserControl="clr-namespace:LibraryInfoSystem.Components" xmlns:n="clr-namespace:LibraryInfoSystem"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogIn">

    <Grid Background="#FFF0A3A3">
        <StackPanel Width="400" Height="200" Orientation="Vertical" VerticalAlignment="Center">
        <UserControl:txtBox x:Name="usernameTxt" Margin="5" Width="Auto" Height="Auto" Placeholder="Username"/>
        <UserControl:txtBox x:Name="passwordTxt" Margin="5" Width="Auto" Height="Auto" Placeholder="Password"/>
            <Button x:Name="logInBtn" Margin="5" Height="Auto" Width="Auto" Content="Log In" Background="Transparent" BorderBrush="Transparent" Click="logInBtn_Click"/>
            <TextBlock HorizontalAlignment="Center"
          TextWrapping="Wrap" 
          Text="Don't have an account?" VerticalAlignment="Top"/>
        <n:NavButton Text="Register here." NavUri="/Pages/Registration.xaml" Margin="5" Width="Auto" Height="Auto" BorderBrush="Transparent" BorderThickness="0" Click="register_Click"/>
        </StackPanel>
        
    </Grid>
</Page>
