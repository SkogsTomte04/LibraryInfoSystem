      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryInfoSystem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductPage">

    <Grid Background="#FFBDBDBD">
        <Image x:Name="Cover_img" Height="200" Width="150"/>

        <StackPanel>
            <TextBlock x:Name="Title" Text="BRRRR"/>
            <TextBlock x:Name="price" Text="BRRRR"/>
            <TextBlock x:Name="platform" Text="BRRRR"/>
            
        </StackPanel>
    </Grid>
</Page>
