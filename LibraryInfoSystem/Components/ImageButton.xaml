<UserControl x:Class="LibraryInfoSystem.Components.ImageButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryInfoSystem.Components"
             xmlns:n="clr-namespace:LibraryInfoSystem"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="60">
    <Grid>
        <Button>
            <Image Source="{Binding SourceImage, RelativeSource={RelativeSource AncestorType=UserControl}}" Stretch="UniformToFill"/>
        </Button>
    </Grid>
</UserControl>
